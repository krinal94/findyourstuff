<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/restaurant_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/rest_img"/>

        <Button
            android:id="@+id/View_details"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/restaurant_img"
            android:layout_alignParentRight="true"
            android:background="@drawable/roundrect"
            android:text="View Details"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_above="@+id/View_details"
            android:layout_alignLeft="@+id/restaurant_name"
            android:layout_toRightOf="@+id/restaurant_img"
            android:text="Location"
            android:textSize="17dp"
            android:textColor="#000000"  />

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_above="@+id/location"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/restaurant_img"
            android:text="Restaurant name"
            android:textSize="17dp" 
            android:textColor="#000000" />
</RelativeLayout>