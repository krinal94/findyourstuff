<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="info.pleasuretrip.HotelDetails" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fitsSystemWindows="true"
        android:src="@drawable/aumregency"/>

    <TextView
        android:id="@+id/hotel_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="25dp"
        android:background="#d6d6c2"
        android:text="Hotel Information"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add"
        android:layout_alignTop="@+id/icon1"
        android:layout_marginTop="14dp"
        android:text="contact no"
        android:textColor="#000000"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/icon2"
        android:layout_alignParentBottom="true"
        android:src="@drawable/call" />

    <TextView
        android:id="@+id/amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rooms"
        android:layout_alignLeft="@+id/hotel_info"
        android:layout_marginLeft="66dp"
        android:text="price amount"
        android:textColor="#000000"
        android:textSize="15dp" />

    <Button
        android:id="@+id/book"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/rooms"
        android:layout_alignRight="@+id/hotel_info"
        android:layout_alignTop="@+id/amt"
        android:background="@drawable/roundrect"
        android:text="Book Now" />

    <TextView
        android:id="@+id/hotel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/price"
        android:layout_below="@+id/hotel_info"
        android:layout_marginTop="18dp"
        android:text="name" 
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rooms"
        android:layout_below="@+id/hotel_name"
        android:layout_marginTop="14dp"
        android:text="Price:"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hotel_info"
        android:layout_below="@+id/price"
        android:layout_marginLeft="19dp"
        android:text="Hotel rooms:"
        android:textColor="#000000"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_above="@+id/icon1"
        android:layout_alignLeft="@+id/rooms"
        android:src="@drawable/addloc" />

    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/icon2"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/price"
        android:text="address"
        android:textColor="#000000"
        android:textSize="15dp" />
    
   </RelativeLayout>
   
